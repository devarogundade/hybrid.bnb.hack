{
    "manifest_version": 3,
    "name": "Hybrid Wallet",
    "description": "Manage your hybrid tokens.",
    "version": "1.0.0",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "js": [
                "./content.js"
            ],
            "matches": [
                "*://your.host.com/*"
            ],
            "run_at": "document_end"
        }
    ]
}